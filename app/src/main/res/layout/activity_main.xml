<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.malec.uno.MainActivity">

    <ImageView
        android:id="@+id/CurrentCard"
        android:layout_width="85dp"
        android:layout_height="133dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toLeftOf="@+id/Deck"
        app:layout_constraintTop_toTopOf="@+id/Deck"
        app:srcCompat="@drawable/empty_card"/>

    <ImageView
        android:id="@+id/Deck"
        android:layout_width="85dp"
        android:layout_height="133dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="64dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/deck"
        android:layout_marginEnd="32dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <ImageView
            android:id="@+id/LeftCard0"
            android:layout_width="52dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:padding="4dp"
            app:srcCompat="@drawable/empty_card"/>

        <ImageView
            android:id="@+id/LeftCard1"
            android:layout_width="52dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:padding="4dp"
            app:srcCompat="@drawable/empty_card"/>

        <ImageView
            android:id="@+id/CenterCard"
            android:layout_width="52dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:padding="4dp"
            app:srcCompat="@drawable/empty_card"/>

        <ImageView
            android:id="@+id/RightCard1"
            android:layout_width="52dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:padding="4dp"
            app:srcCompat="@drawable/empty_card"/>

        <ImageView
            android:id="@+id/RightCard0"
            android:layout_width="52dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:padding="4dp"
            app:srcCompat="@drawable/empty_card"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
