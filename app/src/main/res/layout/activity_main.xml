<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context="com.malec.uno.MainActivity">

    <TextView
        android:id="@+id/ConnectedPlayersText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/TotalPlayers"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/PlayerTurn"
        app:layout_constraintLeft_toLeftOf="@+id/PlayerTurn"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@android:color/holo_orange_dark"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:id="@+id/CloseRoom"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="@string/CloseRoom"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"/>

    <Button
        android:id="@+id/Quit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/LeaveGame"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"/>

    <Button
        android:id="@+id/GiveTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NextTurn"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/CurrentCard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/CurrentCard"/>

    <TextView
        android:id="@+id/ColorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/ColorOrder"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="invisible"
        app:layout_constraintRight_toLeftOf="@+id/CurrentCard"
        app:layout_constraintTop_toTopOf="@+id/CurrentCard"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/WildChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/ConnectedPlayersText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Deck"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/HandCardsCount"
        android:layout_marginStart="8dp">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="64dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/SubmitRadio"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="64dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/RadioGreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ColorGreen"/>

                <RadioButton
                    android:id="@+id/RadioRed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ColorRed"/>

                <RadioButton
                    android:id="@+id/RadioBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ColorBlue"/>

                <RadioButton
                    android:id="@+id/RadioYellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ColorYellow"/>
            </RadioGroup>

        </LinearLayout>

        <Button
            android:id="@+id/SubmitRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:text="@string/ColorSubmitBtnText"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            android:layout_marginEnd="32dp"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/HandCardsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/HandSize"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/PlayerTurn"
        />

    <TextView
        android:id="@+id/PlayerTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/CurrentPlayer"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/HandLayout"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/CurrentCard"
        android:layout_width="86dp"
        android:layout_height="134dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="64dp"
        app:layout_constraintRight_toLeftOf="@+id/Deck"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        app:srcCompat="@drawable/empty_card"/>

    <ImageView
        android:id="@+id/Deck"
        android:layout_width="86dp"
        android:layout_height="134dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="64dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        app:srcCompat="@drawable/deck"/>

    <LinearLayout
        android:id="@+id/HandLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <ImageView
            android:id="@+id/LeftCard0"
            android:layout_width="52dp"
            android:layout_height="130dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/empty_card"/>

        <ImageView
            android:id="@+id/LeftCard1"
            android:layout_width="52dp"
            android:layout_height="130dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/empty_card"/>

        <ImageView
            android:id="@+id/CenterCard"
            android:layout_width="52dp"
            android:layout_height="130dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/empty_card"/>

        <ImageView
            android:id="@+id/RightCard1"
            android:layout_width="52dp"
            android:layout_height="130dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/empty_card"/>

        <ImageView
            android:id="@+id/RightCard0"
            android:layout_width="52dp"
            android:layout_height="130dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/empty_card"/>
    </LinearLayout>

    <TextView
        android:id="@+id/MaxDrawText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="4dp"
        android:text="1"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/CurrentCard"
        app:layout_constraintRight_toRightOf="@+id/CurrentCard"
        app:layout_constraintTop_toBottomOf="@+id/CurrentCard"/>

    <ImageView
        android:id="@+id/AnimCard"
        android:layout_width="82dp"
        android:layout_height="130dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/empty_card"/>

</android.support.constraint.ConstraintLayout>
