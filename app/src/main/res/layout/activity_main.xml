<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context="com.malec.uno.MainActivity">

    <TextView
        android:id="@+id/HandCardsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        android:text="Карт в руке 10"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/PlayerTurn"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/PlayerTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ход игрока 1"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/CurrentCard"
        android:layout_width="85dp"
        android:layout_height="133dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toLeftOf="@+id/Deck"
        app:layout_constraintTop_toTopOf="@+id/Deck"
        app:srcCompat="@drawable/empty_card"/>

    <ImageView
        android:id="@+id/Deck"
        android:layout_width="85dp"
        android:layout_height="133dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="64dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/deck"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/linearLayout">

        <ImageView
            android:id="@+id/LeftCard0"
            android:layout_width="52dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:padding="4dp"
            app:srcCompat="@drawable/empty_card"/>

        <ImageView
            android:id="@+id/LeftCard1"
            android:layout_width="52dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:padding="4dp"
            app:srcCompat="@drawable/empty_card"/>

        <ImageView
            android:id="@+id/CenterCard"
            android:layout_width="52dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:padding="4dp"
            app:srcCompat="@drawable/empty_card"/>

        <ImageView
            android:id="@+id/RightCard1"
            android:layout_width="52dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:padding="4dp"
            app:srcCompat="@drawable/empty_card"/>

        <ImageView
            android:id="@+id/RightCard0"
            android:layout_width="52dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:padding="4dp"
            app:srcCompat="@drawable/empty_card"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
