                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"
                            app:layout_constraintLeft_toLeftOf="@+id/Room6Name"
                            app:layout_constraintTop_toBottomOf="@+id/Room6Name"/>

                        <TextView
                            android:id="@+id/Room6Name"
                            android:layout_width="wrap_content"
