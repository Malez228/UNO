                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        >

                        <TextView
                            android:id="@+id/Room6Players"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
